{
  "name": "Crossword Plus",
  "description": "Make better use of the screen space while doing the New York Times crossword puzzle.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "bg/background.html",
    "persistent": true
  },
  "content_scripts": [{
    "js": ["js/content.js"],
    "css": ["styles.css"],
    "matches": ["https://www.nytimes.com/crosswords/game/*"]
  }],
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "chrome_style": true
  },
  "manifest_version": 2
}
